<div class="container">
  <div class="row">
    <div class="col-md-12">
      <img src="../public/assets/burger.png" alt="burger" class="img-responsive center-block">
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center">Eat Burger</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <h3>Burgers</h3>
      <ul>
        {{#each burgers}}
        {{#unless this.devoured}}
        <li>
          <h5>{{this.id}}. {{this.name}}
            {{!-- ?_method=PUT --}}
            <form action='burgers/updateOne/{{this.id}}' method='POST'>
              <input type='hidden' name='devour' value='true'>
              <button type='submit' class="btn btn-default">DEVOUR</button>
            </form>
          </h5>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-2"></div>
    <div class="col-md-5">
      <h3 class="text-muted">Former Burgers</h3>
      <ul>
        {{#each burgers}}
        {{#if this.devoured}}
        <li>
          <h5 class="text-muted">{{this.id}}. {{this.name}}</h5>
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <br><br>
  <div class="row">
    <div class="col-md-12 text-center">
      <form class="create-update-form" action="burgers/insertOne" method="POST">
        <div class="form-group">
          <textarea type="text" name="name"></textarea><br>
          <button class="btn btn-default" type="submit">Cook</button>
          <h5 class="text-center">Create a new burger!</h5>
        </div>
      </form>
    </div>
  </div>
</div>